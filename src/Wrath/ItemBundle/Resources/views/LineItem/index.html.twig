<h1>LineItem list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Item_id</th>
            <th>Quantity</th>
            <th>Current_value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('lineitem_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.itemid }}</td>
            <td>{{ entity.quantity }}</td>
            <td>{{ entity.currentvalue }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('lineitem_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('lineitem_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('lineitem_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
