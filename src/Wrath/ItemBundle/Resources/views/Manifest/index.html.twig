{% extends '::base.html.twig' %}

{% block body %}
<h1>Manifest list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Operation</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('manifest_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.operation }}</td>
            
            <td>{{ entity.user }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('manifest_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('manifest_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
